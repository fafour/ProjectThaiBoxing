<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_show_skill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fafour.projectthaiboxing.ShowSkillActivity"
    tools:showIn="@layout/activity_show_skill">

    <RelativeLayout
        android:paddingTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skill Name"
            android:id="@+id/skillName"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:textStyle="bold"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gifBar"
        android:paddingTop="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImg"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ProgressBar"
        android:layout_below="@id/gifBar"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  >

        <ProgressBar
            android:id="@+id/circular_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:indeterminate="false"
            android:max="60"
            android:progress="0"
            android:layout_centerHorizontal="true"
            android:progressDrawable="@drawable/circular_progressbar" />

        <TextView
            android:id="@+id/tvTimeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="00:00"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:textSize="20dp"/>


    </RelativeLayout>

    <LinearLayout android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7dp"
        android:layout_alignParentBottom="true">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iconVideo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:onClick="video"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:paddingBottom="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/icn_video"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/black"/>


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/stop_play_button"
            android:onClick="stop_play"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:paddingBottom="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/icn_pause"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/black"/>


    </LinearLayout>


</RelativeLayout>
